<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="d-flex justify-content-end">
      <div class="navbar-nav">
      <% if (!user) { %> <!-- if the user is not logged-in -->
        <div class="d-flex">
          <form class="form-inline">
          <a class="nav-item nav-link active" href="/login">Login</a>
        </form>
        <form class="form-inline">
          <a class="nav-item nav-link active" href="/register">Register</a>
        </form>
        </div>
      <% } else { %>
        <form class="form-inline" method="POST" action="/logout">
          <a class="nav-item nav-link active" href="/urls">
            Logged In As: <%= user.email %> </a> 
            <button class="btn btn-danger ml-3">Logout</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>